<div class="col-md-6 col-md-offset-3 loginPanel">
  <div class="panel panel-info">
    <div class="panel-body">
      <form method="POST" action="/patientregister">
        <div class="form-group col-md-6">
          <label for="exampleInputPassword1">First Name</label>
          <input required type="text" class="form-control"  name="firstname">
        </div>
        <div class="form-group col-md-6">
          <label for="exampleInputPassword1">Last Name</label>
          <input required type="text" class="form-control"  name="lastname">
        </div>
        <div class="form-group col-md-6">
          <label for="exampleInputPassword1">Phone Number</label>
          <input required placeholder="000-000-0000" type="text" class="form-control" pattern="^\d{3}-\d{3}-\d{4}$" name="phone">
        </div>
        <div class="form-group col-md-6">
          <label for="exampleInputPassword1">Date Of Birth</label>
          <input required type="text" placeholder="00/00/0000"class="form-control" pattern="^\d{2}/\d{2}/\d{4}$" name="dob">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Address 1 </label>
          <input required type="text" placeholder="Street Address" class="form-control"  name="address1">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Address 2</label>
          <input required type="text" placeholder="City, State, Zip" class="form-control"  name="address2">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email@email.com" name="email">
        </div>
        <button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button>
      </form>
      <h4>{{msg}} </h4>
    </div>
  </div>
</div>