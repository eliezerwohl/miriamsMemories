<div class="col-md-6 col-md-offset-3 loginPanel">
  <div class="panel panel-info">
    <div class="panel-body">
      <form action ="/patientquestion/{{number}}" method="post" onsubmit="questionSubmit()">
        <h3 class="question text-center">{{question}}</h3>
        <textarea name="answer" rows="10" required class="form-control"> </textarea>
        <input type="hidden" name="question" id="question"> 
        <button type="submit" class="btn btn-block btn-primary btn-lg"> Submit </button>
      </form>
    </div>
  </div>
</div>