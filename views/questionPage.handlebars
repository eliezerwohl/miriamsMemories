<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-info">
    <div class="panel-body">
      <form id ="qa" action ="/patientquestion/{{number}}"  method="post" onsubmit="questionSubmit()" >
        <h3 class="question text-center">{{question}}</h3>
        <textarea name="answer" id ="answer" rows="10" required class="form-control"> </textarea>
        <input type="hidden" name="question" id="question"> 
        <p id="warning"> Please enter all fields before submitting </p>
        <button type="submit" class="btn btn-block btn-primary btn-lg"> Submit </button>
      </form>
    </div>
  </div>
</div>